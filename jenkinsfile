pipeline {
    agent any 
    stages {
        stage('Waiting for approval') {
            steps {
                echo 'Hello world!' 
                input message: 'approve or deny deploy'
            }
        }
        stage('Send to deploy'){
            steps {
                echo "entrou"
                build job: 'deploy', parameters: [text(name: 'api', value: 'statistics-api')]
            }
        }
    }
}
 