pipeline {
    agent any 
    stages {
        stage('Waiting for approval') {
            steps {
                echo 'Hello world!' 
                input message: 'check if deploy', parameters: [booleanParam(defaultValue: false, description: '', name: 'deploy')], submitterParameter: 'deploy'
            }
        }
        stage('Send to deploy'){
            steps {
                script{
                    if (env.deploy == true) {
                        echo "entrou"
                    }
                }
            }
        }
    }
}
